{
  "name": "nirmana",
  "private": true,
  "version": "0.0.0",
  "description": "Cross-platform visual app creation IDE for rapid development",
  "author": "Nirmana Team",
  "license": "MIT",
  "main": "dist-electron/main.js",
  "homepage": "https://nirmana.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/nirmana/nirmana.git"
  },
  "scripts": {
    "test": "echo Please run any of the test scripts from the test folder.",
    "test-unit": "mocha test/unit/index.js --delay --ui=tdd --timeout=5000 --exit",
    "test-integration": "node test/integration/index.js",
    "test-smoke": "node test/smoke/index.js",
    "preinstall": "node build/npm/preinstall.js",
    "postinstall": "node build/npm/postinstall.js",
    "compile": "cd build && node ../node_modules/gulp/bin/gulp.js --gulpfile gulpfile.simple.js compile",
    "compile-check": "tsc --noEmit --skipLibCheck",
    "watch": "npm-run-all -lp watch-client watch-extensions",
    "watch-client": "vite --mode development",
    "watch-extensions": "cd build && node ../node_modules/gulp/bin/gulp.js watch-extensions",
    "dev": "npm run watch",
    "dev:electron": "vite --mode electron-dev",
    "build": "npm run compile && npm run build:electron",
    "build:web": "vite build --mode production",
    "build:electron": "vite build --mode electron",
    "build:extensions": "cd build && node ../node_modules/gulp/bin/gulp.js --gulpfile gulpfile.simple.js compile",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "gulp": "cd build && node --max-old-space-size=8192 ../node_modules/gulp/bin/gulp.js",
    "lint": "node build/eslint",
    "lint:fix": "node build/eslint --fix",
    "hygiene": "node build/hygiene.js",
    "precommit": "node build/hygiene.js",
    "clean": "rimraf dist dist-electron out .build",
    "clean:all": "rimraf dist dist-electron out .build node_modules",
    "update-extensions": "node build/lib/builtInExtensions.js",
    "compile-extensions": "cd build && node ../node_modules/gulp/bin/gulp.js compile-extensions",
    "bundle-components": "cd build && node ../node_modules/gulp/bin/gulp.js bundle-components",
    "preview": "vite preview"
  },
  "devDependencies": {
    "del": "^7.1.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.11.1",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jsdoc": "^50.3.1",
    "event-stream": "^3.3.4",
    "fancy-log": "^1.3.3",
    "glob": "^5.0.13",
    "gulp": "^4.0.0",
    "gulp-azure-storage": "^0.12.1",
    "gulp-bom": "^3.0.0",
    "gulp-buffer": "^0.0.2",
    "gulp-filter": "^5.1.0",
    "gulp-flatmap": "^1.0.2",
    "gulp-gzip": "^1.4.2",
    "gulp-json-editor": "^2.5.0",
    "gulp-plumber": "^1.2.0",
    "gulp-rename": "^1.2.0",
    "gulp-replace": "^0.5.4",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-untar": "^0.0.7",
    "merge-options": "^1.0.1",
    "mime": "^1.4.1",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.8",
    "mocha": "^10.8.2",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "pump": "^1.0.1",
    "rimraf": "^2.2.8",
    "source-map": "^0.6.1",
    "source-map-support": "^0.3.2",
    "through2": "^4.0.2",
    "tslib": "^2.6.3",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.39.0",
    "util": "^0.12.4",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-stream": "^7.0.0",
    "xml2js": "^0.5.0",
    "yaserver": "^0.4.0",
    "zx": "^8.7.0"
  },
  "dependencies": {
    "@parcel/watcher": "^2.4.0",
    "open": "^10.1.2"
  },
  "optionalDependencies": {
    "windows-foreground-love": "^0.5.0"
  }
}
